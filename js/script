// Open Door Policy - Really Know Your Rights

// Smooth scroll for nav links
document.querySelectorAll('a[href^="#"]').forEach((link) => {
  link.addEventListener("click", (e) => {
    const targetId = link.getAttribute("href").slice(1);
    const target = document.getElementById(targetId);
    if (!target) return;
    e.preventDefault();
    target.scrollIntoView({ behavior: "smooth", block: "start" });
  });
});

// Copy log template button
const copyLogBtn = document.querySelector("[data-copy-log]");
if (copyLogBtn) {
  copyLogBtn.addEventListener("click", () => {
    const template = `
Date:
People:
Event (facts, not feelings):
Impact on work/health:
Follow-up (who you told, when, how):`;
    navigator.clipboard
      .writeText(template.trim())
      .then(() => {
        copyLogBtn.textContent = "Copied!";
        setTimeout(() => (copyLogBtn.textContent = "Copy log template"), 1500);
      })
      .catch(() => {
        alert("Could not copy. You can still select and copy manually.");
      });
  });
}

// Copy any template <pre> with data-template
document.querySelectorAll("[data-copy-template]").forEach((btn) => {
  btn.addEventListener("click", () => {
    const container = btn.closest(".template-card");
    if (!container) return;
    const pre = container.querySelector("[data-template]");
    if (!pre) return;

    const text = pre.textContent.replace(/\u00a0/g, " "); // non-breaking spaces
    navigator.clipboard
      .writeText(text.trim())
      .then(() => {
        btn.textContent = "Copied!";
        setTimeout(() => (btn.textContent = "Copy"), 1500);
      })
      .catch(() => {
        alert("Could not copy. You can still select and copy manually.");
      });
  });
});

// Simple FAQ toggle
document.querySelectorAll("[data-faq]").forEach((btn) => {
  btn.addEventListener("click", () => {
    const item = btn.closest(".faq-item");
    const answer = item?.querySelector(".faq-answer");
    if (!answer) return;
    answer.classList.toggle("open");
  });
});
// FAQ toggle functionality
document.querySelectorAll('[data-faq]').forEach(button => {
  button.addEventListener('click', () => {
    const answer = button.nextElementSibling;
    const isOpen = button.classList.contains('open');

    // Close all open FAQ answers first
    document.querySelectorAll('[data-faq]').forEach(btn => {
      btn.classList.remove('open');
      if (btn.nextElementSibling) {
        btn.nextElementSibling.style.maxHeight = null;
      }
    });

    // Open the clicked one (if it wasnâ€™t already open)
    if (!isOpen) {
      button.classList.add('open');
      answer.style.maxHeight = answer.scrollHeight + 'px';
    }
  });
});

